{
  "name": "PrestoDoctor Kiosk",
  "description": "PrestoDoctor Telemedicine Kiosk App",
  "manifest_version": 2,
  "version": "1.0.1",
  "author": {
    "name": "Kyle Powers",
    "email": "kyle@prestodoctor.com"
  },
  "kiosk_enabled": true,
  "offline_enabled": true,
  "icons": {
    "16": "img/icon_16.png",
    "128": "img/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["www/js/jquery.min.js","js/lib/wsc-chrome.js","js/admin.js","js/main.js"],
      "persistent": false
    }
  },
  "sockets":{
    "tcpServer": {
      "listen": "*"
    }
  },
  "permissions": [
    "<all_urls>",
    "system.display",
    "system.network",
    "power",
    "webview",
    "alwaysOnTopWindows",
    "storage",
    "geolocation",
    "app.window.fullscreen",
    "app.window.fullscreen.overrideEsc",
    "audioCapture",
    "videoCapture",
    {"fileSystem": ["directory","retainEntries"]}
  ],
  "optional_permissions": []

}
